{
  "name": "vmix-volley-scoreboard",
  "version": "1.0.3",
  "description": "VolleyScore Master: An Electron-based application designed for volleyball tournament graphics management. It integrates seamlessly with vMix for live broadcasts, providing real-time control over on-screen titles, scoreboards, and match infographics.",
  "main": "src/main/main.js",
  "tsx": {
    "esm": true
  },
  "scripts": {
    "dev": "concurrently -k -s first \"vite\" \"node scripts/wait-for-vite.js && node scripts/run-electron-with-tsx.js\"",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build:electron": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false vite build && electron-builder --win",
    "build:electron:all": "vite build && electron-builder",
    "lint": "eslint src --ext .js,.jsx",
    "lint:fix": "eslint src --ext .js,.jsx --fix",
    "lint:unused": "eslint src --ext .js,.jsx --rule 'unused-imports/no-unused-imports: error' --rule 'unused-imports/no-unused-vars: warn'",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:security": "jest tests/security",
    "test:json": "jest --json --outputFile=test-results.json",
    "test:junit": "jest --reporters=default --reporters=jest-junit",
    "test:ci": "jest --ci --coverage --reporters=default --reporters=jest-junit --json --outputFile=test-results.json",
    "test:analyze": "node scripts/analyze-test-results.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ivmoiseev/vmix-volley-scoreboard.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "bugs": {
    "url": "https://github.com/ivmoiseev/vmix-volley-scoreboard/issues"
  },
  "homepage": "https://github.com/ivmoiseev/vmix-volley-scoreboard#readme",
  "build": {
    "appId": "com.vmix.volley-scoreboard",
    "productName": "VolleyScore Master",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "src/main/**/*",
      "src/shared/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "logos",
        "to": "logos",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "matches",
        "to": "matches",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "settings.json",
        "to": "."
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.sports"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Utility"
    },
    "beforePack": null
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/preset-react": "^7.24.7",
    "@eslint/js": "^9.39.2",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/express": "^5.0.6",
    "@types/jest": "^29.5.12",
    "@types/node": "^25.0.3",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^5.1.2",
    "babel-jest": "^29.7.0",
    "babel-plugin-transform-import-meta": "^2.3.3",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globals": "^17.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jsdom": "^24.1.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.4.6",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "electron-store": "^11.0.2",
    "express": "^5.2.1",
    "qrcode": "^1.5.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0",
    "uuid": "^13.0.0",
    "xml2js": "^0.6.2"
  }
}
