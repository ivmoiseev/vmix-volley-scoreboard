{
  "name": "vmix-volley-scoreboard",
  "version": "1.0.8",
  "description": "VolleyScore Master: An Electron-based application designed for volleyball tournament graphics management. It integrates seamlessly with vMix for live broadcasts, providing real-time control over on-screen titles, scoreboards, and match infographics.",
  "main": "dist/main.js",
  "tsx": {
    "esm": true
  },
  "scripts": {
    "dev": "concurrently -k -s first \"vite\" \"vite build --config vite.config.main.js --watch\" \"node scripts/wait-for-vite.js && node scripts/run-electron-dev.js\"",
    "build": "vite build && vite build --config vite.config.main.js",
    "build:main": "vite build --config vite.config.main.js",
    "build:main:watch": "vite build --config vite.config.main.js --watch",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "clean:release": "node scripts/clean-release.js",
    "compile:typescript": "node scripts/compile-typescript.js",
    "update:year": "node scripts/update-year.js",
    "prepare:icons": "node scripts/prepare-icons.js",
    "build:electron": "npm run clean:release && npm run update:year && npm run prepare:icons && npm run compile:typescript && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false npm run build && electron-builder --win",
    "extract:release-notes": "node scripts/extract-release-notes.js > release-notes.txt",
    "build:electron:publish": "npm run clean:release && npm run update:year && npm run prepare:icons && npm run compile:typescript && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false npm run build && npm run extract:release-notes && dotenv -e .env -- electron-builder --win --publish=always --config.releaseInfo.releaseNotesFile=release-notes.txt",
    "build:electron:all": "npm run clean:release && npm run update:year && npm run prepare:icons && npm run compile:typescript && npm run build && electron-builder",
    "lint": "eslint src --ext .js,.jsx",
    "lint:fix": "eslint src --ext .js,.jsx --fix",
    "lint:unused": "eslint src --ext .js,.jsx --rule 'unused-imports/no-unused-imports: error' --rule 'unused-imports/no-unused-vars: warn'",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:security": "vitest run tests/security",
    "test:json": "vitest run --reporter=json --outputFile=test-results.json",
    "test:ci": "vitest run --coverage --reporter=verbose --reporter=json --outputFile=test-results.json",
    "test:analyze": "node scripts/analyze-test-results.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ivmoiseev/vmix-volley-scoreboard.git"
  },
  "keywords": [],
  "author": "Илья Моисеев <ilyamoiseev@inbox.ru> (https://webcastmaster.ru)",
  "license": "ISC",
  "type": "module",
  "bugs": {
    "url": "https://github.com/ivmoiseev/vmix-volley-scoreboard/issues"
  },
  "homepage": "https://github.com/ivmoiseev/vmix-volley-scoreboard#readme",
  "build": {
    "appId": "com.vmix.volley-scoreboard",
    "productName": "vMix Volley Scoreboard",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "src/main/preload.cjs",
      "src/shared/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "asar": true,
    "asarUnpack": [],
    "extraResources": [
      {
        "from": "logos",
        "to": "logos",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "matches",
        "to": "matches",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "assets/icon.ico",
        "to": "assets/icon.ico"
      },
      {
        "from": "settings.json",
        "to": "."
      },
      {
        "from": "README.md",
        "to": "."
      },
      {
        "from": "INSTALLATION.md",
        "to": "."
      },
      {
        "from": "USER_GUIDE.md",
        "to": "."
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icon.ico",
      "signAndEditExecutable": true
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "icon.icns",
      "category": "public.app-category.sports"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icon.png",
      "category": "Utility"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "ivmoiseev",
        "repo": "vmix-volley-scoreboard",
        "releaseType": "release"
      }
    ],
    "beforePack": null
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/preset-react": "^7.24.7",
    "@eslint/js": "^9.39.2",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.17",
    "babel-plugin-transform-import-meta": "^2.3.3",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "dotenv-cli": "^11.0.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globals": "^17.0.0",
    "jsdom": "^24.1.3",
    "supertest": "^7.0.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vitest": "^4.0.17",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.7.3",
    "express": "^5.2.1",
    "marked": "^17.0.1",
    "qrcode": "^1.5.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0",
    "tsx": "^4.19.2",
    "uuid": "^13.0.0",
    "xml2js": "^0.6.2"
  }
}
