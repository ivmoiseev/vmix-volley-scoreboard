{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./src",
    "rootDir": "./src",
    "noEmit": false,
    "declaration": false,
    "sourceMap": false,
    "removeComments": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false
  },
  "include": [
    // src/shared/*.ts - больше не компилируем, собирается через Vite для main процесса
    // src/main/server/api/*.ts - больше не компилируем, собирается через Vite
    "src/renderer/hooks/useMatch.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "release",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.js"
  ]
}
